---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<div class="mt-16" id="footer"></div>
<footer
  class="relative bg-gray-50 dark:bg-gray-900 pt-16 pb-4 rounded-t-3xl shadow-lg"
>
  <!-- Decorative elements positioned behind the footer content -->
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <!-- Top-right shape -->
    <div
      class="absolute top-0 right-0 w-32 h-32 bg-yellow-400 rounded-full opacity-20 blur-3xl"
    >
    </div>
    <!-- Bottom-left shape -->
    <div
      class="absolute bottom-0 left-0 w-32 h-32 bg-yellow-600 rounded-full opacity-20 blur-3xl"
    >
    </div>
  </div>

  <!-- Footer content container -->
  <Container className="relative">
    <!-- Logo & Description -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div>
        <a href="#" class="flex items-center gap-3">
          <!-- Example: replace with the correct path or use the `src="/images/Resloup.svg"` if needed -->
          <img
            class="logo dark:invert"
            src="/images/Resloup.svg"
            alt="Resloup Logo"
          />
        </a>
        <Paragraph className="mt-8 text-gray-700 dark:text-gray-200">
          At Resloup, we help heavy machinery dealerships grow their sales and
          visibility through tailored marketing strategies and high-converting
          content. <br />
          <br />
          <strong>Contact us:</strong> sales@resloup.com
          <br />
          <br />
          <strong>
            <a href="/resources">Resources</a>
          </strong>
        </Paragraph>
        <div class="flex items-center gap-4 mt-8">
          <!-- Facebook -->
          <a
            href="https://www.instagram.com/resloup/"
            target="_blank"
            class="text-gray-500 dark:text-gray-400 hover:scale-105 transition-transform"
          >
            <svg
